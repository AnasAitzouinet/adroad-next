generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int      @id @default(autoincrement())
  userName      String   @default("user")
  firstname     String
  lastname      String?
  avatar        String?
  about         String?
  phone_number  Int?
  email         String   @unique
  password      String
  createdAt     DateTime @default(now())
  emailVerified Boolean? @default(false)
  acceptedRules Boolean? @default(false)
  Role          UserType @default(Client)
  drivers       Driver[] @relation("DriverRelation")
  clients       Client[] @relation("ClientRelation")

  @@map("users")
}

enum UserType {
  Client
  Driver
}

model Client {
  id           Int     @id @default(autoincrement())
  company_name String  @unique
  budget       Decimal
  users        User[]  @relation("ClientRelation")

  @@map("clients")
}

model Driver {
  id        Int     @id @default(autoincrement())
  revenue   Decimal
  car_model String
  car_miles String
  users     User[]  @relation("DriverRelation")

  @@map("drivers")
}
